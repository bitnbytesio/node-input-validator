{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": "airbnb-base",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "max-len": [
            "error",
            {
                "code": 120
            }
        ],
        "class-methods-use-this": "off",
        "indent": [
            "error",
            4
        ]
    }
}