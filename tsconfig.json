{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "esm",
    "declarationDir": "types",
    "target": "ES2021",
    "lib": [
      "ES2021"
    ],
    "module": "ES2020",
    "moduleResolution": "Node",
    "strict": true,
    "alwaysStrict": true,
    "declaration": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "removeComments": false,
    "newLine": "lf",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "isolatedModules": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "typedocOptions": {
    "entryPoints": [
      "./src"
    ],
    "out": "docs"
  }
}