{
  "name": "node-input-validator",
  "version": "5.0.0",
  "description": "validation library for nodejs, inspired by laravel.",
  "main": "./cjs/index.js",
  "module": "./esm/index.js",
  "exports": {
    ".": {
      "require": "./cjs/index.js",
      "default": "./esm/index.js",
      "types": "./types/index.d.ts"
    },
    "./esm": "./esm/**/*.js",
    "./cjs": "./cjs/**/*.js"
  },
  "types": "types/index.d.ts",
  "dependencies": {
    "file-type": "^16.5.3",
    "mime-types": "^2.1.32",
    "read-chunk": "^3.2.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/mime-types": "^2.1.4",
    "@types/node": "^18.0.0",
    "@types/validator": "^13.12.2",
    "date-fns": "^2.30.0",
    "dayjs": "^1.11.13",
    "jest": "^29.7.0",
    "moment": "^2.30.1",
    "ts-jest": "^29.2.5",
    "typedoc": "^0.26.11",
    "typedoc-plugin-custom-tags": "^1.0.2",
    "typescript": "^4.9.5",
    "validator": "^13.12.0"
  },
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "test": "npx jest",
    "test:coverage": "npx jest --coverage",
    "report:coverage": "codecov -f coverage/coverage-final.json",
    "compile": "npx tsc -p tsconfig.json && npx tsc -p cjs.tsconfig.json && node fixup.js",
    "compile:docs": "npx typedoc --theme ../doctheme",
    "docs": "npx typedoc --custom-tags-config typedoc-tags-config.json",
    "prepare": "npm run compile",
    "prepublishOnly": "npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bitnbytesio/node-input-validator.git"
  },
  "keywords": [
    "validation",
    "validator",
    "data validation",
    "input validator",
    "form",
    "laravel",
    "koa",
    "express",
    "file validator",
    "image",
    "mimes"
  ],
  "author": {
    "name": "Harcharan Singh",
    "email": "bitnbytesio@gmail.com"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bitnbytesio/node-input-validator/issues"
  },
  "homepage": "https://bitnbytes.io/docs/niv/index.html"
}
