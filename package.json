{
  "name": "node-input-validator",
  "version": "5.0.0-beta.5",
  "description": "validation library for nodejs, inspired by laravel.",
  "main": "./cjs/index.js",
  "module": "./esm/index.js",
  "exports": {
    ".": {
      "require": "./cjs/index.js",
      "default": "./esm/index.js"
    },
    "./esm": "./esm/**/*.js",
    "./cjs": "./cjs/**/*.js"
  },
  "types": "esm/index.d.ts",
  "dependencies": {
    "file-type": "^16.5.3",
    "mime-types": "^2.1.32",
    "read-chunk": "^3.2.0"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^8.3.1",
    "@types/jest": "^26.0.20",
    "@types/mime-types": "^2.1.0",
    "@types/validator": "^13.1.3",
    "codecov": "^3.8.1",
    "date-fns": "^2.16.1",
    "dayjs": "^1.10.4",
    "eslint": "^7.18.0",
    "jest": "^26.6.3",
    "moment": "^2.29.1",
    "rollup": "^2.70.0",
    "rollup-plugin-delete": "^2.0.0",
    "ts-jest": "^26.4.4",
    "tslib": "^2.3.1",
    "typedoc": "^0.22.13",
    "typescript": "^4.6.2",
    "validator": "^13.5.2"
  },
  "engines": {
    "node": ">=10.12"
  },
  "scripts": {
    "test": "npx jest",
    "test:coverage": "npx jest --coverage",
    "report:coverage": "npx codecov -f coverage/coverage-final.json",
    "compile": "NODE_ENV=production rollup -c && node fixup.js",
    "compile:docs": "npx typedoc --theme ../doctheme",
    "prepublishOnly": "npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bitnbytesio/node-input-validator.git"
  },
  "keywords": [
    "validation",
    "validator",
    "data validation",
    "input validator",
    "form",
    "laravel",
    "koa",
    "express",
    "file validator",
    "image",
    "mimes"
  ],
  "author": {
    "name": "Harcharan Singh",
    "email": "bitnbytesio@gmail.com"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bitnbytesio/node-input-validator/issues"
  },
  "homepage": "https://bitnbytes.io/docs/niv/index.html"
}
